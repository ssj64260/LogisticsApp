<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_bg_edittext">

        <EditText
            android:id="@+id/et_information"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/text_hint_user_nickname"
            android:inputType="text"
            android:maxLines="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/color_181818"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/textsize_14" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_clear"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/selector_bg_button_yellow"
        android:gravity="center"
        android:text="@string/text_button_save_information"
        android:textColor="@drawable/selector_text_button_yellow"
        android:textSize="16sp" />

</LinearLayout>
