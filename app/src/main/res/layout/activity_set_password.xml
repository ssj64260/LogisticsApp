<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_bg_edittext">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/text_hint_password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/color_181818"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:id="@+id/iv_clear_password"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_clear"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_do_commit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_bg_button_yellow"
            android:gravity="center"
            android:text="@string/text_button_do_commit"
            android:textColor="@drawable/selector_text_button_yellow"
            android:textSize="@dimen/textsize_16" />

    </LinearLayout>

</LinearLayout>
